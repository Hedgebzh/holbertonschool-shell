#!/usr/bin/env bash
#final boss, oh yeah
./manage_my_process &
case "$!" in
   start)
            echo "$$" > /var/run/my_process.pid
            echo "manage_my_process started"
            ;;
   stop) 
            rm /var/run/my_process.pid
            echo "manage_my_process stopped"
            ;;
   restart)
            rm /var/run/my_process.pid
	    echo "$$" > /var/run/my_process.pid
            echo "manage_my_process restarted"
            ;;
   *)
       cat "Usage: manage_my_process {start|stop|restart}"
       exit 1
            ;;
esac
